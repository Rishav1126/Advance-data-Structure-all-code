class Solution {
    public int climbStairs(int n) {

        // Base cases
        if (n == 1) return 1;
        if (n == 2) return 2;

        int prev1 = 1; // ways to reach step 1
        int prev2 = 2; // ways to reach step 2

        for (int i = 3; i <= n; i++) {

            int current = prev1 + prev2;
            prev1 = prev2;
            prev2 = current;
        }

        return prev2;
    }
}
