class Solution {
    public int peakIndexInMountainArray(int[] arr) {
        int left = 0;
        int right = arr.length - 1;

        while (left < right) {
            int mid = left + (right - left) / 2;

            // If we are on the increasing part of the mountain
            if (arr[mid] < arr[mid + 1]) {
                left = mid + 1;
            } else {
                // We are on the peak or on the decreasing part
                right = mid;
            }
        }

        return left;  // or right, both will be at the peak index
    }
}
