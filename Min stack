import java.util.*;

class MinStack {
    private Stack<Integer> stack;
    private Stack<Integer> minStack;

    public MinStack() {
        stack = new Stack<>();
        minStack = new Stack<>();
    }

    // Push element onto stack
    public void push(int val) {
        stack.push(val);
        if (minStack.isEmpty()) {
            minStack.push(val);
        } else {
            minStack.push(Math.min(val, minStack.peek()));
        }
    }

    // Remove top element
    public void pop() {
        stack.pop();
        minStack.pop();
    }

    // Get top element
    public int top() {
        return stack.peek();
    }

    // Retrieve minimum element
    public int getMin() {
        return minStack.peek();
    }
}
